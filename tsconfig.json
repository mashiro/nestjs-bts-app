{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app/domain": [
        "libs/domain/src"
      ],
      "@app/domain/*": [
        "libs/domain/src/*"
      ],
      "@app/infra": [
        "libs/infra/src"
      ],
      "@app/infra/*": [
        "libs/infra/src/*"
      ],
      "@app/rest": [
        "libs/rest/src"
      ],
      "@app/rest/*": [
        "libs/rest/src/*"
      ],
      "@app/graphql": [
        "libs/graphql/src"
      ],
      "@app/graphql/*": [
        "libs/graphql/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}